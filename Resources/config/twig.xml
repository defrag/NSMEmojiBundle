<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
      <parameter key="nsm_emjoi.twig.extension.class">NSM\Bundle\EmojiBundle\Twig\Extension\EmojiTwigExtension</parameter>
    </parameters>


    <services>
        <service id="nsm_emjoi.twig.extension" class="%nsm_emjoi.twig.extension.class%" public="false">
            <argument type="service" id="nsm_emjoi.templating.helper" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>
