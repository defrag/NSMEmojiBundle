<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>

    <parameter key="templating.helper.emoji.class">NSM\Bundle\EmojiBundle\Helper\EmojiHelper</parameter>

  </parameters>

  <services>

    <service id="templating.helper.emoji" class="%templating.helper.emoji.class%" public="false">
      <tag name="templating.helper" alias="emoji" />
      <argument type="service" id="emoji.parser" />
    </service>

  </services>
</container>
